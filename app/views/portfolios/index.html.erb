<h1>Listing portfolios</h1>

<table>
  <tr>
    <th>Profile</th>
    <th>Sf amount</th>
    <th>Sf price</th>
    <th>Monthly price</th>
    <th>Location</th>
    <th>Created on</th>
    <th>Created at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @portfolios.each do |portfolio| %>
  <tr>
    <td><%= portfolio.profile_id %></td>
    <td><%= portfolio.sf_amount %></td>
    <td><%= portfolio.sf_price %></td>
    <td><%= portfolio.monthly_price %></td>
    <td><%= portfolio.location %></td>
    <td><%= portfolio.created_on %></td>
    <td><%= portfolio.created_at %></td>
    <td><%= link_to 'Show', portfolio %></td>
    <td><%= link_to 'Edit', edit_portfolio_path(portfolio) %></td>
    <td><%= link_to 'Destroy', portfolio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

